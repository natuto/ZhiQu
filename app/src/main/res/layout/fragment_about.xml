<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.lws.zhiqu.theme.ColorRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_centerInParent="true"
               android:src="@drawable/head_image"/>

       </RelativeLayout>
    </com.lws.zhiqu.theme.ColorRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="简介"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub项目地址"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_github"
            android:text="https://github.com/natuto/ZhiQu"
            android:textColor="@color/colorBluePrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载地址"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_download"
            android:text="https://fir.im/zhiqus"
            android:textColor="@color/colorBluePrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系我"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:2932151815@qq.com"
            android:textColor="@color/colorBluePrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="感谢"
            android:layout_margin="2dp"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Api数据来源"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="gank 知乎日报 煎蛋 聚合数据..等"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="参考 干货集中营 之一等项目"
            />

    </LinearLayout>




</LinearLayout>